<% flash.each do |key, value| %>
  <div class="flash <%= key %>">
    <%= value %>
  </div>
<% end %>



<style>
  .flash {
  padding: 10px;
  margin: 10px 0;
}

.notice {
  background-color: #d4edda;
  color: #155724;
}

.alert {
  background-color: #f8d7da;
  color: #721c24;
}

.success {
  background-color: #d4edda;
  color: #155724;
}

.info {
  background-color: #cce5ff;
  color: #004085;
}

</style>